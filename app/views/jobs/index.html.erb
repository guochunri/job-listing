<div class="col-md-12">
  <div class="job">
    <!-- <%= link_to("Add a job", new_job_path, class: "btn btn-primary pull-right") %> -->
  </div>
  <div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
          <%= link_to("按照薪資下限排序", jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
            <%= link_to("按照薪資上限排序", jobs_path(:order => "by_upper_bound")) %>

        </li>
        <li>
          <%= link_to("按照發表時間排序", jobs_path ) %>

        </li>
    </ul>
</div>
<table class="table table-boldered">
    <thead>
    <tr>
      <td>Title</td>
      <td>Description</td>
      <td>Created Time</td>
    </tr>
  </thead>
  <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td>
          <%= link_to(job.title, job_path(job)) %>
        </td>
        <td>
          <%= job.description %>
        </td>
        <td>
          <%= job.created_at %>
        </td>
        <td>
           <%= link_to("Edit", edit_job_path(job), class: "btn btn-sm btn-default") %>
           <%= link_to("Delete", job_path(job),    class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?" } )%>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>
</div>
